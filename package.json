{
  "name": "codex",
  "version": "1.0.0",
  "type": "module",
  "description": "LLM Prompt Tracker - compare responses from different LLMs",
  "scripts": {
    "dev": "vite",
    "dev:all": "./local-dev.sh",
    "dev:frontend": "./local-dev.sh frontend",
    "dev:backend": "./local-dev.sh backend",
    "dev:worker": "wrangler dev --local --persist --env development",
    "dev:backend:simple": "./start-backend-simple.sh",
    "dev:backend:full": "./start-backend.sh",
    "seed-data": "./setup-test-data.sh",
    "seed-data:direct": "curl -X GET http://localhost:8787/api/seed-test-data",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint src/**/*.{js,jsx}",
    "approve-builds": "echo 'Approving builds...' && vite build",
    "generate-migrations": "drizzle-kit generate:sqlite",
    "apply-migrations:local": "wrangler d1 migrations apply codex_db --local",
    "apply-migrations:prod": "wrangler d1 migrations apply codex_db",
    "deploy:worker": "wrangler deploy",
    "deploy:frontend": "wrangler pages deploy dist"
  },
  "dependencies": {
    "@picocss/pico": "^2.1.1",
    "bcryptjs": "^2.4.3",
    "drizzle-orm": "^0.29.3",
    "jsonwebtoken": "^9.0.2",
    "marked": "^9.1.6",
    "preact": "^10.26.4",
    "preact-router": "^4.1.2"
  },
  "devDependencies": {
    "@preact/preset-vite": "^2.10.1",
    "drizzle-kit": "^0.20.13",
    "eslint": "^7.32.0",
    "eslint-plugin-preact": "^0.1.0",
    "vite": "^6.2.3",
    "wrangler": "^4.6.0"
  }
}